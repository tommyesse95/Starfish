<boundary name="inlet" type="virtual">
<path> M 0.0 5e-5 l 2e-3 0.0
</path>
</boundary>

<boundary name="wall1" type="solid" material="al" value="-400">
<path>
M 0.0 0.0 l 2e-3 0.0
</path>
</boundary>


<boundary name="neutral_inlet" type="virtual">
<path> M 0.0 0.5e-3 l 0.0 0.5e-3
</path>
</boundary>


<boundary name="wall2" type="solid" material="al" value="0">
<path>
M wall1:last l 0.0 2e-3
</path>
</boundary>


<boundary name="anode" type="solid" material="al" value="+400">
<path>
M wall2:last l -2e-3 0.0
</path>
</boundary>


<boundary name="wall3" type="solid" material="al" value="0">
<path>
M anode:last l 0.0 -2e-3
</path>
</boundary>



</boundaries>
