<!--
M moves to a point, this is optional
L makes a line to a given (x,y) position
l makes a line to a point given by (dx,dy) offsets
-->

<!-- Simulation of the ionization and flow of electrons -->

<boundaries units="m">
<transform reverse="true" /> <!-- For the normal -->
<!-- Use scaling? -->
<boundary name="inlet" type="virtual">
<path> M 0.0 0.0 L 0.0 2e-3 <!-- 4 mm inlet (simmetry) -->
</path>
</boundary>

<boundary name="wall1" type="solid" material="al" value="0">
<path>
M 0.0 4e-3, 2e-3 4e-3, 2e-3 15e-3, 5e-3 15e-3 <!-- Modify the last value if modified neutral inlet  -->
</path>
</boundary>

<!-- Be careful and remember the simmetry. How much mass flow rate? -->
<!-- With reverse = true should be fine -->
<boundary name="neutral_inlet" type="virtual">
<path> M 7e-3 15e-3 l 2e-3 0.0
</path>
</boundary>

<boundary name="wall2" type="solid" material="al" value="0">
<path>
M neutral_inlet:last l 21e-3 0
</path>
</boundary>

<boundary name="anode1" type="solid" material="al" value="50">
<path>
M wall2:last l 8e-3 0.0
</path>
</boundary>

<boundary name="wall3" type="solid" material="al" value="0">
<path>
M anode1:last l 50e-3 0
</path>
</boundary>

<boundary name="cathode" type="solid" material="al" value="-50">
<path>
M wall3:last l 8e-3 -8e-3
</path>
</boundary>

<boundary name="wall4" type="solid" material="al" value="10">
<path>
M cathode:last l 25e-3 0.0
</path>
</boundary>


<boundary name="anode2" type="solid" material="al" value="50">
<path>
M wall4:last l 8e-3 0.0
</path>
</boundary>


<boundary name="wall5" type="solid" material="al" value="0">
<path>
M anode2:last l 5e-3 0.0
</path>
</boundary>


<!-- Sink to check absorbtion ions
