<!-- starfish input file -->
<simulation>
<note>cxt setup</note>

<!-- load input files -->
<load>materials.xml</load>
<load>domain.xml</load>
<load>boundaries.xml</load>
<load>interactions.xml</load>
<output type="boundaries" file_name="results/boundaries.vtp" format="vtk">
<variables>deprare.e-, flux-normal.e-</variables>
</output>

<!-- material sources -->

<sources>

	<boundary_source name="inlet" type="maxwellian">
	<boundary>inlet</boundary>
	<material>e-</material>
	<current>0.001</current>
	<temperature>5000</temperature>
	<v_drift>1000000</v_drift>
	</boundary_source>

</sources>


<!--enable animation and tracing -->
<animation start_it="1" frequency="200">
<output type="2D" file_name="results/field_ani.vts" format="vtk">
<scalars>phi,rho, nd.e-,</scalars>
<vectors>[efi, efj],[u.e-,v.e-]</vectors>
</output>

<output type="particles" file_name="results/particles-e-.vtp" format="vtk">
<count>2000</count>
<material>e-</material>
<rotate>true</rotate>
</output>

</animation>


<!-- set time parameters 5e-8-->
<time>
<num_it>2000</num_it>
<dt>5e-8</dt>
<steady_state>-1</steady_state>
</time>

<!-- enable restart save -->
<restart>
<it_save>2000</it_save>
<save>true</save>
<load>false</load>
<nt_add>10000</nt_add>
</restart>


<solver>
<type>poisson</type>
<max_it>5000</max_it>
<tol>1e-4</tol>
<linear>false</linear>
<initial_only>false</initial_only>
<n0>2e14</n0>
<te0>2</te0>
<phi0>0</phi0>
</solver>

<!-- run simulation -->
<starfish randomize="false" />


<!-- output -->
<output type="2D" file_name="results/field.vts" format="vtk">
<scalars>nodevol, phi, rho, p, nd.e-,  nd-ave.e-, </scalars>
<vectors>[efi, efj], [u-ave.e-,v-ave.e-]</vectors>
</output>

<!-- surface -->
<output type="boundaries" file_name="results/boundaries.vtp" format="vtk">
<variables>deprate.e-, flux-normal.e-</variables>
</output>

<!-- particle positions and velocities for a scatter plot -->
<output type="particles" file_name="results/particles-i.vtp" format="vtk">
<count>10000</count>
<material>e-</material>
<rotate>true</rotate>
</output>

</simulation>
