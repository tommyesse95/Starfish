<boundary name="wall2" type="solid" material="al" value="0">
<path>
M anode:last l 0.1 0.0
</path>
</boundary>

<boundary name="cathode" type="solid" material="al" value="-500">
<path>
M wall2:last l 0.05 0.0
</path>
</boundary>

<!-- keeper !! Try 0 V otherwise the eletrcons don't move-->
<boundary name="wall3" type="solid" material="al" value="0">
<path>
M cathode:last l 0.05 0.0
</path>
</boundary>

