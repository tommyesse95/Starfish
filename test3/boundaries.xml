<!--
M moves to a point, this is optional
L makes a line to a given (x,y) position
l makes a line to a point given by (dx,dy) offsets
-->
<boundaries units="m">
<transform reverse="true" />


<boundary name="inlet" type="virtual">
<path> M 0.5e-3 0.0 L 1e-3 0.0
</path>
</boundary>

<boundary name="wall1" type="solid" material="al" value="-200">
<path>
M 0.0 0.0 l 2e-3 0.0
</path>
</boundary>

<boundary name="wall2" type="open" material="al" value="0">
<path>
M wall1:last l 0.0 2e-3
</path>
</boundary>

<boundary name="wall3" type="solid" material="al" value="+200">
<path>
M wall2:last l -2e-3 0.0
</path>
</boundary>

<boundary name="wall4" type="open" material="al" value="0">
<path>
M wall3:last l 0.0 -2e-3
</path>
</boundary>

<boundary name="neutral_inlet" type="virtual">
<path> M 0.0 0.5e-3 L 0.0 1e-3
</path>
</boundary>




</boundaries>
